<!DOCTYPE html>
<html>
  <head>
    <title>Amazon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse" style = 'width: 100%; background-color: #111111;'>
      <div class="container-fluid">
        <ul class="nav navbar-nav" style='span6'>
            <li><%=link_to 'Home', root_path%></li>
            <li><%=link_to 'About', about_path%></li>
            <li class='dropdown'>
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Products<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%=link_to 'Product List', products_path(page: @page)%></li>
                <li><%=link_to 'Include a Product', new_product_path%></li>
              </ul>
            </li>
            <li><%=link_to 'Contact', contact_path%></li>
        </ul>
      </div>
    </nav>
    <%if flash[:notice] %>
    <div class='alert-success' style="text-align: center;">
      <%= flash[:notice] %>
    </div>
    <%elsif flash[:alert] %>
    <div class="alert-danger" style='text-align: center;'>
      <%=flash[:alert]%>
    </div>
    <%end%>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
